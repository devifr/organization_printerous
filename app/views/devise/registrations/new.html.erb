<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->

    <!-- Icon -->
    <div class="fadeIn first">
      <img src="/assets/printerous.png" id="icon" alt="User Icon" />
    </div>

    <!-- Sign Up Form -->
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.text_field :name, class: 'fadeIn second', placeholder: 'Name' %>
      <br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'fadeIn second', placeholder: 'email' %>
      <br/>
      <%= f.password_field :password, autocomplete: "current-password", class: 'fadeIn third', placeholder: 'password' %>
      <br/>
      <%= f.password_field :password_confirmation, autocomplete: "current-password", class: 'fadeIn third', placeholder: 'password confimation' %>
      <br/>
      <input type="submit" class="fadeIn fourth" value="Sign up">
    <% end %>

    <!-- Remind Passowrd -->
    <div id="formFooter">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
